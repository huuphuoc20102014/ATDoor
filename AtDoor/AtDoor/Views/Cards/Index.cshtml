@model IEnumerable<AtDoor.Efs.Entities.Card>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div style="overflow-x: scroll;">
    <div class="row align-self-start">
        <div class="col-md-6 ">
            <div class="row align-self-start">
                <div class="col-md-5">
                </div>
                <div class="col-md-2 ">
                    Mã
                </div>
                <div class="col-md-3 ">
                    Tên
                </div>
                <div class="col-md-2 ">
                    Chi tiết
                </div>
                
            </div>
        </div>
        <div class="col-md-6 ">
            <div class="row align-self-start">
                <div class="col-md-2 ">
                    người tạo
                </div>
                <div class="col-md-2 ">
                    Ngày tạo
                </div>
                <div class="col-md-2 ">
                    Người sửa
                </div>
                <div class="col-md-2 ">
                    Ngày sửa
                </div>
                <div class="col-md-2 ">
                    @Html.DisplayNameFor(model => model.RowStatus)
                </div>
                <div class="col-md-1 ">
                    @Html.DisplayNameFor(model => model.Status)
                </div>
                <div class="col-md-1">
                    Mã người dùng
                </div>
            </div>
        </div>
    </div>
    @foreach (var item in Model)
    {
        <div class="row">
            <div class="col-md-6 ">
                <div class="row ">
                    <div class="col-md-5">
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-success" asp-action="Details" asp-route-id="@item.Id">Details</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </div>
                    <div class="col-md-2">
                        @Html.DisplayFor(modelItem => item.Code)
                    </div>
                    <div class="col-md-2">
                        @Html.DisplayFor(modelItem => item.Name)
                    </div>
                    <div class="col-md-2">
                        @Html.DisplayFor(modelItem => item.Description)
                    </div>
                    
                </div>
            </div>
            <div class="col-md-6 ">
                <div class="row align-self-start">
                    <div class="col-md-2">
                        @Html.DisplayFor(modelItem => item.CreatedBy)
                    </div>
                    <div class="col-md-2">
                        @Html.DisplayFor(modelItem => item.CreatedDate)
                    </div>
                    <div class="col-md-2">
                        @Html.DisplayFor(modelItem => item.ModifiedBy)
                    </div>
                    <div class="col-md-2">
                        @Html.DisplayFor(modelItem => item.ModifiedDate)
                    </div>
                    <div class="col-md-2">
                        @Html.DisplayFor(modelItem => item.RowStatus)
                    </div>
                    <div class="col-md-1">
                        @Html.DisplayFor(modelItem => item.Status)
                    </div>
                    <div class="col-md-1">
                        @Html.DisplayFor(modelItem => item.FkUserId)
                    </div>

                </div>
            </div>
        </div>

    }
</div>
