            @Html.DisplayNameFor(model => model.ModifiedDate)
        </div>
        <div class="col-md-1">
            @Html.DisplayNameFor(model => model.RowStatus)
        </div>
        <div class="col-md-1">
            @Html.DisplayNameFor(model => model.Status)
        </div>
        <div class="col-md-1">
            @Html.DisplayNameFor(model => model.FkUserId)
        </div>
    </div>
}
