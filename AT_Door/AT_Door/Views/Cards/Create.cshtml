@model AT_Door.Controllers.CardCreateViewModel


@{
    ViewData["Title"] = "Create";
}


<h4>Create Category</h4>
<hr />
<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row form-group">
        <div class="col-md-3 text-md-right ">
        </div>
        <div class="col-md-7">
            <input type="submit" value="Create" class="btn btn-primary" />
            <a asp-action="Index" class="k-button">Back to List</a>
        </div>
    </div>

    <div class="row form-group">
        <div class="col-md-3 text-md-right ">
            <label asp-for="Code" class="col-form-label"></label>
            <span class="text-danger">*</span>
        </div>
        <div class="col-md-7">
            <input asp-for="Code" class="k-textbox form-control" />
        </div>
        <div class="offset-md-3 col-md-7 at-wrapper-validate">
            <span asp-validation-for="Code" class="text-danger"></span>
        </div>
    </div>

    <div class="row form-group">
        <div class="col-md-3 text-md-right ">
            <label asp-for="Name" class="col-form-label"></label>
            <span class="text-danger">*</span>
        </div>
        <div class="col-md-7">
            <input asp-for="Name" class="k-textbox form-control" />
        </div>
        <div class="offset-md-3 col-md-7 at-wrapper-validate">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="row form-group">
        <div class="col-md-3 text-md-right ">
            <label asp-for="Description" class="col-form-label"></label>
            <span class="text-danger">*</span>
        </div>
        <div class="col-md-7">
            <input asp-for="Description" class="k-textbox form-control" />
        </div>
        <div class="offset-md-3 col-md-7 at-wrapper-validate">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>

    <div class="row form-group">
            <div class="col-md-3 text-md-right ">
                <label asp-for="FkUserId" class="col-form-label">Người dùng</label>
                <span class="text-danger">*</span>
            </div>
            <div class="col-md-7">
                @Html.DropDownListFor(model => model.FkUserId, (SelectList)ViewBag.listUser, "--Chọn--", new { @class = "form-control" })
            </div>
            <div class="offset-md-3 col-md-7 at-wrapper-validate">
                <span asp-validation-for="FkUserId" class="text-danger"></span>
            </div>
    </div>

    <div class="row form-group">
        <div class="col-md-3 text-md-right ">
        </div>
        <div class="col-md-7">
            <input type="submit" value="Create" class="btn btn-primary" />
            <a asp-action="Index" class="k-button">Back to List</a>
        </div>
    </div>
</form>




